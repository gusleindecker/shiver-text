{
  "name": "shiver-text",
  "version": "0.1.0",
  "description": "A TypeScript library for creating a smooth shiver/shuffling animation to your text.",
  "main": "dist/index.js",
  "module": "dist/index.esm.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "type": "module",
  "scripts": {
    "build": "rollup -c",
    "dev": "rollup -c -w",
    "test": "jest",
    "prepublishOnly": "npm run build",
    "lint": "eslint src --ext .ts",
    "format": "prettier --write \"src/**/*.ts\""
  },
  "keywords": [
    "text",
    "animation",
    "shiver",
    "shuffling",
    "effect",
    "typescript",
    "dom"
  ],
  "author": "Gustavo Leindecker",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/gusleindecker/shiver-text.git"
  },
  "bugs": {
    "url": "https://github.com/gusleindecker/shiver-text/issues"
  },
  "homepage": "https://github.com/gusleindecker/shiver-text#readme",
  "devDependencies": {
    "@eslint/js": "^9.28.0",
    "@rollup/plugin-typescript": "^12.1.2",
    "eslint": "^9.28.0",
    "prettier": "^3.5.3",
    "rollup": "^4.42.0",
    "rollup-plugin-dts": "^6.2.1",
    "tslib": "^2.5.0",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.34.0"
  },
  "engines": {
    "node": ">=14.0.0"
  },
  "volta": {
    "node": "22.16.0"
  }
}
