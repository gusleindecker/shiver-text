{
  "name": "shiver-text",
  "version": "0.2.0",
  "type": "module",
  "description": "A small library (6kb gzipped) written in TypeScript for creating a smooth shiver-shuffling animation for your text.",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "browser": "dist/index.js",
  "unpkg": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "browser": "./dist/index.js"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "rollup -c",
    "clean": "rm -rf dist",
    "dev": "rollup -c --watch",
    "format": "prettier --write \"src/**/*.ts\"",
    "lint": "eslint src --ext .ts",
    "prepublishOnly": "npm run build",
    "test:unit": "vitest run",
    "test:unit:coverage": "vitest run --coverage",
    "test:unit:watch": "vitest"
  },
  "keywords": [
    "text",
    "animation",
    "shiver",
    "shuffling",
    "effect",
    "typescript",
    "dom"
  ],
  "author": "Gustavo Leindecker",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/gusleindecker/shiver-text.git"
  },
  "bugs": {
    "url": "https://github.com/gusleindecker/shiver-text/issues"
  },
  "homepage": "https://github.com/gusleindecker/shiver-text#readme",
  "devDependencies": {
    "@eslint/js": "^9.31.0",
    "@rollup/plugin-node-resolve": "^16.0.1",
    "@rollup/plugin-terser": "^0.4.4",
    "@rollup/plugin-typescript": "^12.1.4",
    "@vitest/coverage-v8": "^3.2.4",
    "eslint": "^9.28.0",
    "prettier": "^3.6.2",
    "rollup": "^4.45.1",
    "rollup-plugin-dts": "^6.2.1",
    "tslib": "^2.6.0",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.37.0",
    "vitest": "^3.2.4"
  },
  "engines": {
    "node": ">=14.0.0"
  },
  "volta": {
    "node": "22.16.0"
  }
}
